<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="./style.css">
</head>

<body>
    <div class="container">
        <div class="d-flex justify-content-between">
            <h3>Read Operation</h3>
            <button type="submit" class="btn btn-info">
                <a style="text-decoration: none; color: white;" href="/create.html">
                    Create
                </a>
            </button>
        </div>
        <div class="row">
            <% if (rows.length> 0) { %>
                <% rows.forEach((eachData)=> { %>
                    <div class="col-md-3 m-1">
                        <div class="card" style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title"><%- eachData.name %></h5>
                                <h6 class="card-subtitle mb-2 text-body-secondary"><%- eachData.email %></h6>
                                <a href="/update-data?id=<%-eachData.id%>" class="card-link">Edit</a>
                                <a href="/delete-data?id=<%-eachData.id%>" class="card-link">Delete</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <div class="col-md-3 m-1">
                                <div class="card" style="width: 18rem;">
                                    <div class="card-body">
                                        <h5 class="card-title">No Data found....</h5>
                                    </div>
                                </div>
                            </div>
                            <% } %>
        </div>
    </div>
</body>

</html>